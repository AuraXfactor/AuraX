rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow user subcollections like auraStats, preferences, etc.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can create and read their own journal entries
    match /journals/{userId}/entries/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Anyone can read the global list of boosts
    match /boosts/{boostId} {
      allow read: if true;
      allow write: if false; // Only admins can create boosts via the Firebase console
    }

    // Users can only write their own completed boosts (toolkit usage)
    match /userBoosts/{userId}/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Posts can be read by anyone, only created by signed-in users
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }
  }
}
