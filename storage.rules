rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow an authenticated user to write files into a folder named after their UID within 'aura-posts'
    // Allow any authenticated user to read any files within the 'aura-posts' folder
    match /aura-posts/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null;
    }
    // You might also need a default rule for other storage paths, e.g.:
    // match /{allPaths=**} {
    //   allow read, write: if request.auth != null; // Example: allow all authenticated users to read/write all storage
    // }
  }
}